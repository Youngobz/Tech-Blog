<div class="container" id="blog-cards">
  <div class="row row-cols-1 g-4">
    <div class='col'>
        <div class='card'>
            <div class='card-body text-left'>
                <h5 class='card-title'>Create New Post</h5>
                <form id="new-post" class="login-form">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input
                            type="text" id="title" class='form-control' value="{{blogData.title}}" required name="title"
                        />
                    </div>
                    <div class='form-group'>
                        <label for='content'>Content</label>
                        <textarea
                            type='password' id='content' name='content' class='form-control' required
                        >{{blogData.content}}</textarea>
                    </div>
                    {{#if isUpdation}}
                        <button type='button' id="update-btn" class='btn button submit-btn' data-id={{blogData.id}}>Update</button>
                        <button type='button' id="delete-btn" class='btn button submit-btn' data-id={{blogData.id}}>Delete</button>
                    {{else}}
                        <button type='button' id="create-btn" class='btn button submit-btn'>Create</button>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
  </div>
</div>

<script src="/js/add-post.js"></script>