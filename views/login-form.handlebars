<div class='container'>
  <div class="row row-cols-1 g-4">
    <div class='col'>
      <div class="login-container">
        <div class="login-title">
          <h4>Login</h4>
        </div>
        <form id="login-form" class="login-form">
          <div class="form-group">
            <label for="login-username">Username</label>
            <input
              type="text" id="login-username" class='form-control' value="" required name='login-username'
            />
          </div>
          <div class='form-group'>
            <label for='login-password'>Password</label>
            <input
              type='password' id='login-password' name='login-password' class='form-control' required
            />
          </div>
          <button type='submit' class='btn button submit-btn'>Login!</button>
        </form>
        <div class="signup-link">
          <a class="navbar-brand" href="/signup">Sign up instead</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>